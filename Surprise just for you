<script>
const noBtn = document.getElementById("noBtn");
const yesBtn = document.getElementById("yesBtn");
const page1 = document.getElementById("page1");
const page2 = document.getElementById("page2");
const music = document.getElementById("bgMusic");
const petName = document.getElementById("petName");
const secretLove = document.getElementById("secretLove");

/* No button runs away */
function moveNo() {
  const x = Math.random() * 300 - 150;
  const y = Math.random() * 120 - 60;
  noBtn.style.transform = `translate(${x}px, ${y}px)`;
}
noBtn.addEventListener("mouseover", moveNo);
noBtn.addEventListener("click", moveNo);

/* YES click */
yesBtn.addEventListener("click", () => {
  music.play();
  page1.classList.add("hidden");
  page2.classList.remove("hidden");
  heartConfetti();
});

/* Heart confetti */
function heartConfetti() {
  for (let i = 0; i < 40; i++) {
    const heart = document.createElement("div");
    heart.className = "heart";
    heart.innerHTML = "‚ô•Ô∏è";
    heart.style.left = Math.random() * 100 + "vw";
    heart.style.bottom = "-20px";
    heart.style.fontSize = Math.random() * 20 + 18 + "px";
    heart.style.animationDuration = Math.random() * 3 + 4 + "s";
    document.body.appendChild(heart);
    setTimeout(() => heart.remove(), 7000);
  }
}

/* Secret Easter Egg: double-click name */
petName.addEventListener("dblclick", () => {
  secretLove.classList.remove("hidden");
  secretSparkles();
});

/* Secret sparkles */
function secretSparkles() {
  for (let i = 0; i < 15; i++) {
    const spark = document.createElement("div");
    spark.innerHTML = "üíó";
    spark.style.position = "absolute";
    spark.style.left = Math.random() * 100 + "vw";
    spark.style.top = Math.random() * 100 + "vh";
    spark.style.fontSize = "14px";
    spark.style.opacity = "0.8";
    document.body.appendChild(spark);
    setTimeout(() => spark.remove(), 1500);
  }
}
</script>

